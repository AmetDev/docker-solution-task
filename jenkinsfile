pipeline {
    agent {
        dockerfile {
            filename 'Dockerfile.jenkins'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'nginx -v'
            }
        }
        stage('Build and run container') {
            steps {
                sh 'docker build -t some-web-site -f Dockerfile .'
                sh 'docker run -d --name some-web-site -p 8081:80 --restart unless-stopped some-web-site'
                sh 'docker ps -f name=some-web-site'
            }
        }
    }
}