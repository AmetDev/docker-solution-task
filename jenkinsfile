pipeline {
    agent {
    dockerfile true 
    }
    stages {
        stage('Test') {
            steps {
                sh 'nginx -v'
            }
        }
        stage('Build and run container') {
            steps {
                sh 'sudo docker build -t some-web-site .'
                sh 'sudo docker run -d --name some-web-site -p 8081:80 --restart unless-stopped some-web-site'
                sh 'sudo docker ps -f name=some-web-site'
            }
        }
    }
}